@inherits RocketForms.Components.RocketFormsTokens<Simplisity.SimplisityRazor>
@using DNNrocketAPI.Components;
@using Simplisity;
@using RocketRazorEngine.Text;
@using RocketPortal.Components;
@using RocketForms.Components;
@AssigDataModel(Model)
<!--inject-->

<style>
    .alert {
        padding: 20px;
        background-color: #f44336; /* Red */
        color: white;
        margin-bottom: 15px;
        max-width: 1200px;
    }
    .closebtn {
        margin-left: 15px;
        color: white;
        font-weight: bold;
        float: right;
        font-size: 22px;
        line-height: 20px;
        cursor: pointer;
        transition: 0.3s;
    }
    .closebtn:hover {
        color: black;
    }
</style>

<div class="alert">
    <span class="closebtn" onclick="$('.simplisity_loader').show();window.location.reload(true);">&times;</span>
    @HtmlOf(moduleData.GetSetting("emailfailmessage" + sessionParams.CultureCode))
</div>

